@import "normalize"
@import "variables"
@import "base"
@import "grid"

.content
  background-color $c-container
  box-shadow $c-bg--dark 0 0 20px 4px
  padding 30px

.description
  margin-top 0

.textarea
  resize none
  width 100%
  height 326px
  background-color lighten($c-container, 50%)
  padding 18px
  border 1px solid $c-grey--dark
  border-radius 2px
  box-shadow inset alpha($c-bg, 0.2) 0 0 8px 0
  font-family $f-code
  font-size 14px
  line-height 18px
  color $c-grey
  overflow auto
  margin-bottom 12px
  &:focus
    outline none
    border-color $c-focus
  

.checkbox
  margin-top 24px
  display inline-block
  padding-left 28px
  position relative
  cursor pointer
  &:before
    content ""
    width 16px
    height 16px
    border 1px solid $c-grey
    position absolute
    left 0
    top 3px
    border-radius 2px
    background-color lighten($c-container, 60%)
  
input:checked + .checkbox:after
  content ""
  box-sizing border-box
  width 21px
  height 10px
  border-bottom 3px solid $c-bg--dark
  border-left 3px solid $c-bg--dark
  border-top 1px solid transparent
  border-right 1px solid transparent
  transform rotate(-52deg) skew(-13deg)
  backface-visibility hidden
  position absolute
  left 1px
  top 1px
  border-radius 2px

.button
  display inline-block
  margin-top 24px
  font-size 20px
  line-height 48px
  padding 0 24px
  color $c-container
  background-color $c-bg
  border-radius 4px
  cursor pointer
  &:hover
    background-color lighten($c-bg, 10%)
  &:active
    background-color lighten($c-bg, 10%)
    box-shadow inset $c-bg--dark 0 2px 6px 0
    line-height 46px
    padding-top 2px

.code
  resize none
  width 100%
  background-color lighten($c-container, 50%)
  padding 18px
  padding-bottom 0
  border 1px solid $c-grey
  border-radius 2px
  font-family $f-code
  font-size 14px
  line-height 18px
  color $c-grey
  box-shadow inset alpha($c-bg, 0.2) 0 0 8px 0
  overflow auto
  margin 0
  &:focus
    outline none
    border-color $c-focus
  &--error
    color $c-alert
    border-color $c-alert

.footer
  color $c-container
  text-align center
  padding-top 24px
  font-size 14px
  padding-bottom 24px